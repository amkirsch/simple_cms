<% @page_title = "Admin Users List" %>

<%= link_to("<< Back to Menu", {controller: 'access', action: 'index'}, class: 'back-to-link') %>

<div class="admin_users index">
  <h2>Users</h2>

  <%=  %>
  <%= link_to(image_tag('plus_sign.png', size: '11x11', alt: '+') + " Add New User", {action: 'new'}, :class => 'action new') %>

  <div><%= pluralize(@admin_users.size, 'admin_user') %> found</div>
  <table class="listing" summary="User list">
    <tr class="header">
      <th>ID</th>
      <th>User Name</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @admin_users.each do |admin_user| %>
      <tr class="<%= cycle('odd', 'even') %>">
      <td><%= admin_user.id %></td>
      <td><%= admin_user.username %></td>
      <td class="center"><%= admin_user.first_name %></td>
      <td class="center"><%= admin_user.last_name %></td>
      <td class="center"><%= mail_to(admin_user.email) %></td>
      <td class="actions">
        <%= link_to("Edit", {action: 'edit', id: admin_user.id}, :class => 'action edit') %>
        <%= link_to("Delete", {action: 'delete', id: admin_user.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
