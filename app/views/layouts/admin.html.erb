<!DOCTYPE html>
<html>
  <head>
    <title>Simple CMS | <%= @page_title || "Admin" %></title>
    <!-- Rails Helper -->
    <%= stylesheet_link_tag("application", media: "all") %>
    <!-- HTML Tag -->
    <!-- <link href="/assets/stylesheets/application.css" rel="stylesheet" type="text/css" media="all" /> -->
  </head>
  <body>
    <div id="header">
      <h1>Simple CMS Admin</h1>
    </div>
    <div id="main">
      <% if !flash[:notice].blank? %>
      <div class="notice">
        <%= flash[:notice] %>
      </div>
      <% end %>

      <div id="content">
        <%= yield %>
      </div>

    </div>
  </div>
  <div id="footer">
    <p id="copyright">&copy; something.com / Andrew Kirschke</p>
  </div>
</body>
</html>
